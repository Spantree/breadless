<div class="sandwich-form-container">
    <form role="form" class="sandwich-form">
        <input id="sandwich-name" placeholder="Enter sandwich name" value="{{name}}" />

    </form>
    <ul class="sandwich-ingredients-list">
        <li class="sandwich-item bread">Bread</li>

        {{#each ingredients}}
            <li class="sandwich-item">{{this.name}}</li>
        {{/each}}
            <li>
                <select class="form-control ingredient-select">
                    <option value="">-- Pick an ingredient --</option>
                    {{#each possibleIngredients}}
                    <option value="{{this.name}}">{{this.type}} - {{this.name}}</option>

                    {{/each}}
                </select>
            </li>
        <li class="sandwich-item bread">Bread</li>
    </ul>

    <button id="save-sandwich" type="button" class="btn btn-default save-sandwich-btn">Save</button>
</div>